{% extends 'base.html.twig' %}

{% block title %}Recuperación{% endblock %}

{% block main %}


<div class="container">

    <div class="row justify-content-between">

        <div class="column-6">
            <h4 class="text-danger"><i class="fas fa-box-open"></i> SEMIELABORADO</h4>
            {% if semi.IdAnterior %}
                <h4 class="text-warning">{{ semi.IdAnterior }} | {{ semi.sSemi }}</h4>
            {% else %}
                <h4 class="text-light">{{ semi.Id }} | {{ semi.sSemi }}</h4>
            {% endif %}
            
        </div>        


        <div class="column-6 text-right">
            <a href="" class="btn btn-light btn-lg">
                <i class="fa fa-edit" aria-hidden="true"></i> Seleccionar otro
            </a>
        </div>        

    </div>

    <br>


    <br>

    <div class="row">

        <form class="form-inline" action="" method="post">

            <div class="form-group">
                <h5>Unidades &nbsp;&nbsp;</h5> 
                <input type="text" size="5" name="i_uds_palet" id="i_uds_palet" class="form-control-lg" value="{{ semi.IUdsPalet }}">
                &nbsp;&nbsp;&nbsp;&nbsp;
            </div>
    
            <div class="form-group">
                <h4><i class="fas fa-pallet"></i> Introduzca &nbsp;&nbsp;</h4> 
                <input type="text" pattern="[0-9]{10}" name="idpalet" id="idpalet" class="form-control-lg" placeholder="Código de PALET" required autofocus>
                &nbsp;&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-light btn-lg"> Insertar </button>  
            </div>

            <input id="id" name="id" type="hidden" value="{{ semi.Id }}">
        
        </form>        

    </div>

</div>


{% endblock %}